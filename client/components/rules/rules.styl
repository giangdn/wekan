.rules
  h2
    margin-bottom: 16px

  hr
    margin-left: -16px
    margin-right: -16px
    background-color: #cccccc
    width: auto

.rules-list
  overflow:hidden
  overflow-y: auto
  max-height: 400px
.rules-lists-item
  display: block
  position: relative
  overflow: auto
  p
  	display: inline-block
  	float: left
  	margin: revert
.hide-element
  display:none !important
.user-details
  display:inline-block
.rules-btns-group
  position: absolute
  right: 4px
  top: 50%
  transform: translateY(-50%)
  button
  	margin: auto
.rules-add
  display: block
  margin-top: 15px
  margin-bottom: 5px

  input,
  button
    display: inline-block
    width: auto
    margin-bottom: 0
.rules-back
  display: block
  overflow: auto
  margin-top: 15px
  margin-bottom: 5px
  button
    display: inline-block
    float: right
    margin: auto
    margin-right:14px
    color: #ffffff

.flex
  display: -webkit-box
  display: -moz-box
  display: -webkit-flex
  display: -moz-flex
  display: -ms-flexbox
  display: flex



.triggers-content
  .triggers-body
    display flex
    height 100%

    .triggers-side-menu
      background-color: #e9f3fe
      border: 1px solid #dbebfd
      border-radius: 4px
      height: intrinsic

      ul

        li
          margin: 0.1rem 0.2rem;
          width:50px
          height:50px
          text-align:center
          font-size: 25px
          transition: all 0.2s
          border-radius: 2px
          position: relative
          cursor: pointer

          i
            position: absolute;
            top: 50%;
            left: 50%;
            box-shadow: none
            transform: translate(-50%,-50%);


          &.active
            background #fff
            box-shadow 0 1px 2px rgba(0,0,0,0.15);

          &:hover
            background #fff
            box-shadow 0 1px 2px rgba(0,0,0,0.15);
          a
            @extends .flex
            padding: 1rem 0 1rem 1rem
            width: 100% - 5rem


            span
              font-size: 13px
    .triggers-main-body
      padding: 0.1em 1em
      width:100%
      .trigger-item
        overflow:auto
        padding:10px
        height:40px
        margin-bottom:5px
        border-radius: 3px
        position: relative
        background-color: #e9f3fe
        .trigger-content
            position:absolute
            top:50%
            transform: translateY(-50%)
            left:10px
            .trigger-text
              font-size: 16px
              display:inline-block
            .trigger-inline-button
              font-size: 14px
              display: inline;
              padding: 6px;
              cursor: pointer
              border: 1px solid #badafc
              background-color: #dbebfd
              border-radius: 2px
              transition: all 0.2s
              &:hover, &.is-active
                border-color: #6772e5
                background-color: #ffffff
                color: #6772e5
            .trigger-text.trigger-text-email
              margin-left: 5px;
              margin-top: 10px;
              margin-bottom: 10px;
            .trigger-dropdown
              display:inline-block
              select
                width:auto
                height:30px
                margin:0px
                margin-left:5px
              input
                display: inline-block
                width: 80px;
                margin: 0;
        .trigger-content-mail
          left:20px
          right:100px
        .trigger-button
          cursor: pointer
          position:absolute
          top:50%
          transform: translateY(-50%)
          transition: all 0.2s
          width:30px
          height:30px
          border: 1px solid #badafc
          background-color: #dbebfd
          border-radius: 2px
          text-align:center
          font-size: 14px
          right:10px
          i
            position: absolute
            top: 50%
            left: 50%
            box-shadow: none
            transform: translate(-50%,-50%)
          &:hover, &.is-active
            border-color: #6772e5
            background-color: #ffffff
            color: #6772e5
        .trigger-button.trigger-button-email
          top:30px
        .trigger-button.trigger-button-person
          right:-40px
        .trigger-button.trigger-button-color
          top: unset
          position: unset
          transform: unset
          font-size: 16px
          width:auto
          padding-left: 10px
          padding-right: 10px
          height:40px
      .trigger-item.trigger-item-mail
        height:300px



