@import 'nib'

.swimlane
  // Even if this background color is the same as the body we can't leave it
  // transparent, because that won't work during a swimlane drag.
  display: flex
  flex-direction: row
  // margin: 0 -8px
  // padding-left: 8px
  overflow: 0;
  

  &.placeholder
    background-color: rgba(0, 0, 0, .2)
    border-color: transparent
    box-shadow: none
    height: 100px

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3),
                0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(2deg)
    cursor: grabbing

    .swimlane-header.ui-sortable-handle
      cursor: grabbing

  .swimlane-header-wrap
    display: flex
    flex-direction: row
    flex: 1 0 100%
    background-color: #D9E4EE
    
    .list-composer
      padding: 4px 8px
      input
        display: inline-block
        width: auto
        margin-bottom: 0
        min-height: 22px
        padding: 6px 8px
      .edit-controls
        display: inline-block
        margin-bottom: 0

    .swimlane-header
      width: 100%
      font-size: 14px
      padding: 5px 8px
      min-height: 12px
      overflow: hidden
      -o-text-overflow: ellipsis
      text-overflow: ellipsis
      word-wrap: break-word
      text-align: center

    .swimlane-header-menu
      position: absolute
      padding: 5px 5px
      
      a.fa
      	width: 10px
      	height: 10px
      	padding: 4px
      	border-radius: 50%
      	background: #f5f5f5
      	font-size: 10px
      	line-height: 10px
      	text-align: center
      	border: solid 1px darken(#e3e6f5, 5%)
      	transition: all 0.2s
      	margin-right: 4px

      	&:hover
          background: #ffffff
          color: #6772e5
          border-color: #6772e5

.list-group
  height: 100%

.moving-swimlane
  display: none

swimlane-color(background, color...)
  background: background !important
  if color
    color: color !important //overwrite text for better visibility

