.flex
  display: -webkit-box
  display: -moz-box
  display: -webkit-flex
  display: -moz-flex
  display: -ms-flexbox
  display: flex

.setting-content
  width 100%
  height 100%

  .content-title
    font-size 20px
    line-height: 56px
    height: 56px
    color: #6772e5
    text-shadow: 0px 1px rgba(0,0,0,0.1)

  .content-body
    .side-menu
      ul
        padding: 0.2rem 1rem 0
        border-bottom: solid 2px #dbebfd
        li
          display: inline-block
          border-top-left-radius: 8px
          border-top-right-radius: 8px
          transition: all 0.2s

          &.active,
          &:hover
            background #e9f3fe
          a
            padding: 0.8rem 1rem
            display: block
            span
              font-size: 13px

    .main-body
      flex: 1
      padding: 16px
      -webkit-user-select: auto // Safari 3.1+
      -moz-user-select: auto // Firefox 2+
      -ms-user-select: auto // IE 10+
      user-select: auto // Standard syntax

      ul
        li
          padding: 0.5rem 0.5rem;

          a
            .is-checked
              border-bottom: 2px solid #2980b9;
              border-right: 2px solid #2980b9;

            span
              vertical-align: middle
              line-height: 20px
              padding-left: 4px

          .admin-announcement,
          .invite-people,
          .layout
            padding-left 20px;
            li
              min-width: 500px;

              ul.no-margin-bottom
                margin-bottom: 0;

              .bg-white
                a
                  background  #f7f7f7
                  &.is-checked
                    background #fff


.option
  -webkit-border-radius: 3px
  border-radius: 3px
  background: #fff
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  display: block
  text-decoration: none
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,0.2)
  box-shadow: 0 1px 2px rgba(0,0,0,0.2)
  padding: 1rem
  vertical-align: middle
  .materialCheckBox
    display: inline-block
    vertical-align: middle

.title
  font-weight 700;
  margin-bottom 0.5rem;
.description
  margin-bottom 0.5rem;
.bg-white
  flex-wrap: wrap
  display: flex
  > div
    width: 25%
    box-sizing: border-box
    flex-grow: 1
    padding: 8px;

.form-control.has-error
  border-color: #a94442;
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075);

li.has-error
  color #a94442
  .form-group
    .form-control
      border-color: #a94442;
      box-shadow: inset 0 1px 1px rgba(0,0,0,.075);

