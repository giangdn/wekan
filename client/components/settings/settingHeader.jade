template(name="settingHeaderBar")
  h1.header-setting-menu
    i.far.fa-tachometer-alt
    | {{_ 'admin-panel'}}

  .setting-header-btns.right
    unless isMiniScreen
      if currentUser
        a.setting-header-btn.settings(href="{{pathFor 'setting'}}")
          i.fal.fa-cog
          span {{_ 'settings'}}

        a.setting-header-btn.people(href="{{pathFor 'people'}}")
          i.fal.fa-users
          span {{_ 'people'}}

        a.setting-header-btn.informations(href="{{pathFor 'information'}}")
          i.fal.fa-info-circle
          span {{_ 'info'}}

      else
        a.setting-header-btn.js-log-in(
          title="{{_ 'log-in'}}")
          i.fal.fa-sign-in
          span {{_ 'log-in'}}
