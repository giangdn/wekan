@import 'nib'

.new-comment
  position: relative
  margin: 0 0 0 38px

  .member
    opacity: .7
    position: absolute
    top: 1px
    left: -38px

  &.is-open
    .member
      opacity: 1

    .helper
      display: inline-block

    textarea
      // min-height: 100px
      color: #4d4d4d
      cursor: auto
      overflow: hidden
      word-wrap: break-word

  .too-long
    margin-top: 8px

  textarea
    background-color: #fff
    border: 1px solid #ced4da
    // box-shadow: 0 1px 2px rgba(0, 0, 0, .23)
    color: #8c8c8c
    min-height: 36px
    // margin: 4px 4px 6px 0
    padding: 8px 12px
    width: 100%

    &:hover,
    &:is-open
      background-color: #fff
      box-shadow: 0 1px 3px rgba(0, 0, 0, .33)
      border: 0
      cursor: pointer

    &:is-open
      cursor: auto
