@import 'nib'

.activity-title
  margin: 0 0.5em 0.8em
  display: flex
  justify-content:space-between

.activities
  clear: both

  .activity
    margin: 16px 0
    display: flex

    .member
      width: 24px
      height: @width

    .activity-desc
      word-wrap: break-word
      overflow: hidden
      flex: 1
      align-self: center
      margin: 0
      margin-left: 3px
      overflow: hidden;
      word-break: break-word;

      .activity-comment
        display: block
        border-radius: 3px
        background: #f7f7f7
        text-decoration: none
        // box-shadow: 0 1px 2px rgba(0,0,0,.2)
        margin-top: 5px
        padding: 8px
        color: #4d4d4d

      .activity-checklist
        display: block
        border-radius: 3px
        background: white
        text-decoration: none
        // box-shadow: 0 1px 2px rgba(0,0,0,.2)
        background: #f5f5f5
        margin-top: 5px
        padding: 5px
        p
          margin-bottom: 0
        
      .activity-meta
        font-size: 0.8em
        color: darken(white, 40%)
