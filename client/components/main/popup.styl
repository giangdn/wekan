@import 'nib'

$popupWidth = 300px

.pop-over
  background: #fff
  border-radius: 4px
  box-shadow: 0px 5px 5px -3px rgba(0,0,0,0.2), 0px 8px 10px 1px rgba(0,0,0,0.14), 0px 3px 14px 2px rgba(0,0,0,0.12)
  position: absolute
  width: $popupWidth
  overflow: hidden
  z-index: 99999
  margin-top: 5px

  hr
    margin: 0px -10px
    width: $popupWidth
    
  .btn-container-clear
    clear: both
    padding: 16px 0 12px
    
    button
      margin-bottom: 0
      margin-right: 4px
      float: none
  
  p,
  textarea,
  input[type="text"],
  input[type="email"],
  input[type="password"],
  input[type="file"]
    margin: 4px 0 12px
    width: 100%

  select
    width: 100%
    margin: 8px 0 14px

  textarea
    height: 72px

  form a span
    padding: 0 0.5rem

  .header
    min-height: 36px
    position: relative
    margin-bottom: 6px
    background: #ffffff
    border-bottom: 1px solid #cccccc
    color: darken(white, 60%)

    .header-title
      display: block
      line-height: 56px
      font-size: 1.4em
      color: #39476A
      margin: 0 16px
      font-weight: normal
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap

    .back-btn
      float: left
      overflow: hidden
      min-width: 16px
      transition: width 0.2s
      line-height: 56px
      font-size: 24px

      i.fa
        margin: 10px
        margin-top: 12px
        min-width: 16px

      &.is-hidden
        width: 0
        display: none
        visibility: hidden

    .close-btn
      position: absolute
      top: 0
      line-height: 48px
      font-size: 2em
      right: 12px

  &.no-title .header
    background: none

  .content-wrapper
    width: 100%
    overflow: hidden

  .content-container
    width: 5000px
    max-height: 550px
    transition: transform 0.2s

    .content
      width: $popupWidth - 20px
      padding: 0 10px 10px
      float: left
      
      .popup-content-wrapper
        padding: 16px

      &.no-height
        height: 0
        overflow: hidden
        padding: 0
        margin: 0

  .quiet
    padding: 6px 6px 4px

  &.search-over
    background: #f0f0f0
    min-height: 114px

    .header
      display: none

    .content
      padding: 8px 4px 8px 10px
      margin-right: 8px

      &::-webkit-scrollbar-button
        display: block
        height: 4px
        width: 4px

  .at-form
    .at-error, .at-result
      padding: 8px 12px
      margin: -8px -10px 10px

    .at-error
      background: #ef9a9a

    .at-result
      background: #b2dfdb

  .sk-spinner
    margin: 40px auto

  for depth in (1..6)
    .popup-container-depth-{depth}
      transform: translateX(- (depth - 1) * $popupWidth)

.select-members-list
  margin-bottom: 8px

.pop-over-list
  li > a
    clear: both
    cursor: pointer
    display: block
    font-weight: 500
    padding: 4px 12px
    position: relative
    margin: 0 -10px
    text-decoration: none
    overflow:hidden
    line-height:28px
    transition: all 0.2s

    .item-name
      display: block
      width: auto
      padding-right: 22px

    &:not(.disabled):hover
      background-color: #08acfc
      color: #fff

      .sub-name,
      .quiet
        color: #eee

      .unread-indicator
        background: #fff

    .sub-name
      color: #8c8c8c
      display: block
      font-size: 12px
      font-weight: 400
      line-height: 15px

    &.current
      background-color: #e2e6e9

    &:active
      background-color: #2e85b8

    &.disabled
      color: #8c8c8c
      cursor: default

      .vis-icon
        opacity: .35

      &:hover
        background: none

        .sub-name,
        .quiet
          color: #8c8c8c

      &:active
        background: none

  &.inset li > a
    border-radius: 3px
    margin: 0

  .pop-over-list.checkable
    .fa-check
      display: none
      position: absolute
      top: 6px
      right: 12px

    li.active a
      padding-right: 28px

      .fa-check
        display: block

.pop-over.miniprofile
  .header
    border-bottom-color: transparent
    height: 30px
    position: absolute
    right: 0
    top: 0
    width: 60px
    z-index: 1

  .header-title
    display: none

  .pop-over-list
    padding-top: 8px

  .miniprofile-header
    margin-top: 8px
    min-height: 56px
    position: relative

    .member
      position: absolute
      top: 2px
      left: 2px
      height: 50px
      width: @height

    .info
      margin: 0 0 0 64px
      word-wrap: break-word

      h3 a
        text-decoration: none

        &:hover
          text-decoration: underline

@media screen and (max-width: 800px)
  .pop-over
    width: 100%
    height: 100%
    overflow: hidden
    margin-top: 0px
    border: none
    border-radius: 0

    .header
      color: white
      // background: #2980B9
      min-height: 48px
      padding: 0px 0px
      border: 0px
      border-bottom: solid 1px #eee
      margin: 0px 0px
      width: 100%
      // position: absolute
      // top: 0px

      .header-title
        font-size: 20px
        font-weight: normal
        // padding-top: 8px

      /* .back-btn
        width: 30px
        padding: 8px 12px 8px 12px

        i.fa
          color: white */

      .close-btn
        padding: 0
        line-height: 48px
        right: 18px

        i.fa
          // font-size: 24px
          // color: white

    .content-wrapper
      width: 100%
      height: calc(100% - 48px)
      // overflow-y: scroll
      overflow-x: hidden
      // margin: 48px 0px 0px 0px

    .content-container
      width: 100%
      height: 100%
      max-height: 100%

      .content
        width: 100%
        height: calc(100% - 1px)
        padding: 0
        box-sizing: border-box

        form
          margin: 0
          padding: 12px
          width: 100%
          box-sizing: border-box

        p,
        textarea,
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="file"]
          margin: 4px 0 12px
          width: 100%

    .pop-over-list
      li > a
        width: calc(100% - 20px)
        padding: 10px 10px
        margin: 0px 0px
        border-bottom: 1px solid #eee

    hr
      width: 100%
      height: 1px
      margin: 0
      color: #ffffff
      background: #ffffff

    for depth in (1..6)
      .popup-container-depth-{depth}
        transform: translateX(- (depth - 1) * 100%)
