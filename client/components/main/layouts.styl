    height: 100%

@media screen and (max-width: 800px)
  #content
    margin: 0
    height: calc(100% - 0px)

    > .wrapper
      margin: 0
      padding: 0

    .add-controls,
    .edit-controls
      .quiet, .quiet a
        vertical-align: middle
        display: inline-block

  .wrapper
    height: 100%
    margin: 0px

  #modal
    .modal-content
      width: 92%
  #calendar-view
    .fc-toolbar.fc-header-toolbar
      margin: 12px
      .fc-left, .fc-right, .fc-center
        width: 100%
        display: flex
        justify-content: center
        padding: 2px 0

