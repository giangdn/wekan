@import 'nib'

global-reset()

html, body, input, select, textarea
  font: 14px Roboto, "Helvetica Neue", Arial, Helvetica, sans-serif
  line-height: 18px
  color: #525f7f

html
  font-size: 100%
  max-height: 100%
  user-select: none
  -webkit-text-size-adjust: 100%

body
  // background: darken(white, 13%)
  // background: #f6f9fc
  background: #fff
  color: #525f7f
  margin: 0
  position: relative
  z-index: 0
  overflow-y: auto
  display: flex
  flex-direction: column
  height: 100vh
.logo-wrapper
  margin: 36px auto 20px
  text-align: center
  .teama-logo
    width: 80px
    height: 80px
    margin: 0 auto
#content
  position: relative
  flex: 1
  overflow-x: hidden

  .sk-spinner
    margin-top: 30vh

  > .wrapper
    margin-top: 10px
    padding: 15px
    box-sizing: border-box

#modal
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background: rgba(0, 0, 0, 0.6)
  z-index: 100
  overflow-y: auto

  .modal-content
    width: 500px
    min-height: 160px
    margin: 42px auto
    padding: 12px
    border-radius: 4px
    background: #ffffff
    z-index: 110

    h2
      margin-bottom: 25px

    .modal-close-btn
      display: block
      float: right
      font-size: 24px

  .modal-content-wide
    max-width: 960px
    min-width: 760px
    position: relative
    width: 90%
    box-sizing: border-box
    min-height: 0px
    margin: 42px auto
    padding: 16px
    border-radius: 4px
    background: #ffffff
    z-index: 110

    h2
      margin-bottom: 15px

    .modal-close-btn
      display: block
      position: absolute
      right: 8px
      top: 8px
      font-size: 24px
      min-width: 38px
      height: 38px
      line-height: 38px
      text-align: center

h1
  font-size: 22px
  line-height: 1.2em
  margin: 0 0 10px

h2
  font-size: 18px
  line-height: 1.2em
  margin: 0 0 9px

h3, h4
  font-size: 16px
  line-height: 1.25em
  margin: 0 0 6px

h5, h6
