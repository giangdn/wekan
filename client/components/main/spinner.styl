@import 'nib'

/*
 * From https://github.com/tobiasahlin/SpinKit
 *
 * Usage:
 *
 *    <div class="sk-spinner sk-spinner-wave">
 *      <div class="sk-rect1"></div>
 *      <div class="sk-rect2"></div>
 *      <div class="sk-rect3"></div>
 *      <div class="sk-rect4"></div>
 *      <div class="sk-rect5"></div>
 *    </div>
 *
 */

.sk-spinner {
  width: 72px;
  height: 20px;
  margin: auto;
  text-align: center;
  font-size: 10px;

  div {
    background-color: #333;
    height: 100%;
    width: 20px;
    margin: 0;
    border-radius: 50%;
    display: inline-block;

    animation: sk-waveStretchDelay 1.2s infinite ease-in-out;
  }

  .sk-rect2 { animation-delay: -1.1s }
  .sk-rect3 { animation-delay: -1.0s }
  .sk-rect4 { animation-delay: -0.9s }
  .sk-rect5 { animation-delay: -0.8s }
}

@keyframes sk-waveStretchDelay {
  0%, 40%, 100% { transform: scale(0.4) }
  20% { transform: scale(1.0) }
}

/**
 * From https://loading.io/css/
 *
 * <div class="lds-ellipsis">
 *   <div></div>
 *   <div></div>
 *   <div></div>
 *   <div></div>
 * </div>
 */

.lds-ellipsis {
  position: relative;
  width: 64px;
  height: 64px;

  div {
    position: absolute;
    top: 27px;
    width: 11px;
    height: 11px;
    border-radius: 50%;
    background: #fff;
    animation-timing-function: cubic-bezier(0, 1, 1, 0);
  }

  div:nth-child(1) {
    left: 6px;
    animation: lds-ellipsis1 0.3s infinite;
  }

  div:nth-child(2) {
    left: 6px;
    animation: lds-ellipsis2 0.3s infinite;
  }

  div:nth-child(3) {
    left: 26px;
    animation: lds-ellipsis2 0.3s infinite;
  }

  div:nth-child(4) {
    left: 45px;
    animation: lds-ellipsis3 0.3s infinite;
  }
}

@keyframes lds-ellipsis1 {
  0% {
    transform: scale(0);
  }
  100% {
    transform: scale(1);
  }
}
@keyframes lds-ellipsis3 {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0);
  }
}
@keyframes lds-ellipsis2 {
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(19px, 0);
  }
}

/**
 * From https://loading.io/css/
 *
 * <div class="lds-ring">
 *   <div></div>
 *   <div></div>
 *   <div></div>
 *   <div></div>
 * </div>
 */

.lds-ring {
  position: relative;
  width: 48px;
  height: 48px;

  div {
    box-sizing: border-box;
    display: block;
    position: absolute;
    width: 42px;
    height: 42px;
    margin: 5px;
    border: 5px solid #039be5;
    border-radius: 50%;
    animation: lds-ring 0.8s cubic-bezier(0.5, 0, 0.5, 1) infinite;
    border-color: #039be5 transparent transparent transparent;
  }

  div:nth-child(1) {
    animation-delay: -0.3s;
  }
  div:nth-child(2) {
    animation-delay: -0.2s;
  }
  div:nth-child(3) {
    animation-delay: -0.1s;
  }
}

.lds-ring.small {
  width: 20px;
  height: 20px;

  div {
    width: 16px;
    height: 16px;
    margin: 2px;
    border-width: 2px;
  }
}

@keyframes lds-ring {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
