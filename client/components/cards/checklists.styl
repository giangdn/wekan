.js-add-checklist
  color: #8c8c8c

textarea.js-add-checklist-item, textarea.js-edit-checklist-item
  overflow: hidden
  word-wrap: break-word
  resize: none
  height: 34px

.delete-text
  color: #8c8c8c
  word-wrap: break-word
  float: right
  padding: 4px 8px
  background: rgba(0, 0, 0, 0.08)
  border-radius: 2px
  line-height: 1.25em
  transition: all 0.2s
  &:hover
    color: #6772e5
    background: #e0e0e0

.checklist-title
  .checkbox
    float: left
    width: 30px
    height 30px
    font-size: 18px
    line-height: 30px

  .title
    font-size: 18px
    line-height: 25px

  .checklist-stat
    margin: 0 0.5em
    float: right
    padding-top: 6px
    &.is-finished
      color: #3cb500

  .js-delete-checklist
    @extends .delete-text


.js-confirm-checklist-delete
  background-color: #ffffff
  position: absolute
  float: left;
  width: 60%
  margin-top: 0
  margin-left: 15%
  padding: 0
  z-index: 17
  border-radius: 8px
  box-shadow: 0px 11px 15px -7px rgba(0,0,0,0.2), 0px 24px 38px 3px rgba(0,0,0,0.14), 0px 9px 46px 8px rgba(0,0,0,0.12)
  h3.header-title
    line-height: 46px;
    font-size: 1.4em;
    color: #39476a;
    padding: 0 16px;
    font-weight: normal;
    border-bottom: solid 1px #cccccc
  .dialog-contain
    padding: 16px
  p
    position: relative
    margin-bottom: 16px
    span
      font-weight: bold

  .js-checklist-delete-buttons
    position: relative
    text-align: right
    button
      margin-bottom: 0
      margin-left: 4px

#card-details-overlay
  top: 0
  bottom: -600px
  right: 0

.checklist
  background: white
  border-radius: 4px
  margin-bottom: 16px
  padding: 8px

  .checklist-title
    margin: 0
    .title
      font-weight: 500
      font-size: 15px
      background: #e9f3fe
      padding: 6px 8px
      margin: 0

  .checklist-items
    padding: 8px 8px 12px
    
    .add-checklist-item
      margin: 0
      padding: 6px 8px
      color: #a6a6a6 !important
      display: block
      
      &:hover
        color: #666666 !important
      

  &.placeholder
    background: darken(white, 20%)
    border-radius: 2px

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3),
                0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(4deg)
    cursor: grabbing


.checklist-item
  margin: 0
  line-height: 18px
  padding: 6px 8px
  border-radius: 4px
  display: flex
  background: white

  &.placeholder

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3),
                0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(4deg)
    cursor: grabbing

  .check-box
    margin: 0.1em 0 0 0;
    &.is-checked
      border-bottom: 2px solid #3cb500
      border-right: 2px solid #3cb500

  .item-title
    flex: 1
    padding-left: 10px;
    &.is-checked
      color: #8c8c8c
      text-decoration: line-through

    & .viewer
      p
        margin-bottom: 2px

.js-delete-checklist-item
  margin: 0 0 0.5em 1.33em
  @extends .delete-text
  padding: 12px 0 0 0
