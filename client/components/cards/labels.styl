@import 'nib'

// XXX Use .board-widget-labels as a flexbox container
.card-label
  border-radius: 50%
  color: white  //Default white text, in select cases,  changed to black to improve contrast between label colour and text
  display: inline-block
  font-weight: 700
  font-size: 13px
  margin-right: 4px
  margin-bottom: 5px
  padding: 3px 8px
  max-width: 100%
  overflow: ellipsis
  height: 22px
  width: 12px
  vertical-align: middle
  text-align: center

  &:hover
    color: white

  &.square
    height: 30px
    width: @height
    padding: 0

  &.add-label
    box-shadow: 0 0 0 2px darken(white, 25%) inset

    &:hover, &.is-active
      box-shadow: 0 0 0 2px darken(white, 60%) inset

    i.fa-plus
      line-height: 23px

.palette-colors
  &:after
    content: ' '
    display: block
    clear: both

  .palette-color
    flex-grow: 1
    display: flex
    align-items: center
    justify-content: center

