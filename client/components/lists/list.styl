@import 'nib'

.list
  box-sizing: border-box
  display: flex
  flex-direction: column
  animation: fadeInSoft 0.3s ease
  flex: 0 0 270px
  position: relative
  background: #e9f3fe
  margin: 16px 8px
  border-radius: 8px
  border: solid 2px darken(#e9f3fe, 3%) //#ecf3fc
  padding: 0
  float: left
  overflow: hidden

  .list-header-menu
    a.fa, a.far, a.fal
      width: 15px
      height: 15px
      padding: 4px
      border-radius: 50%
      background: darken( #e9f3fe, 3%)
      color: #6599d0
      font-size: 13px
      line-height: 15px
      text-align: center
      border: solid 2px darken(#e9f3fe, 16%)
      transition: all 0.2s

      &:hover
        background: #ffffff
        color: #6772e5
        border-color: #6772e5

  &:first-child
    // margin-left: 5px
    // border-left: none

  .card-details + &
    border-left: none

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3), 0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(4deg)
    cursor: grabbing

    .list-header.ui-sortable-handle
      cursor: grabbing

  &.placeholder
    background-color: rgba(0, 0, 0, .2)
    border-color: transparent
    box-shadow: none
    height: 100px

  &.list-composer, & .list-composer
    .open-list-composer
      color: #8c8c8c

    .list-name-input
      background: white
      margin: -3px 0 8px

.list-header-card-count
  // height: 35px

.list-header-add
  flex: 0 0 auto
  padding: 20px 12px
  position: relative
  min-height: 20px

.list-header
  flex: 0 0 auto
  padding: 10px 12px 14px
  position: relative
  min-height: 27px
  line-height: 27px
  border-top-left-radius: 7px
  border-top-right-radius: 7px
  border-top: 4px solid #e9f3fe

  .wip-limit-badge
    background: #ffffff
    border-radius: 4px
    padding: 3px 4px
    display: inline-block
    font-size: 0.9em
    border: solid 1px darken( #e9f3fe, 3%)
    font-weight: 600

  &.ui-sortable-handle
    cursor: grab

  .list-header-left-icon
    display: none

  .list-header-name
    display: inline-block
    margin: 0
    vertical-align: middle
    max-width: calc(100% - 62px)
    min-width: 60px
    white-space: nowrap
    font-size: 16px
    font-weight: 500
    line-height: 27px
    text-shadow: 0px 1px rgba(0,0,0,0.1)
    color: #6772e5
    min-height: 27px
    overflow: hidden
    text-overflow: ellipsis
    word-wrap: break-word

    .quiet.small
      display: inline-block
      font-weight: 400
      text-shadow: none

  .list-header-watch-icon
    padding-left: 10px
    color: #039be5
    font-size: 1.2em
    vertical-align: middle

  .list-header-menu
    position: absolute
    padding: 0
    top: 10px
    right: 12px

  .list-header-plus-icon
    color: #a6a6a6
    margin-right: 8px

  .highlight
    color: #ce1414

.list-body
  flex: 1 1 auto
  flex-direction: column
  display: flex
  overflow-y: auto
  padding: 0px 10px 10px

  .minicards
    flex-grow: 1
    flex-shrink: 0

    form
      margin-bottom: 9px

  .ps-scrollbar-y-rail
    transform: translateX(2px)

  .open-minicard-composer
    border-radius: 8px
    color: #6599d0
    display: block
    padding: 8px 10px
    position: relative
    text-decoration: none
    animation: fadeIn 0.3s
    transition: all 0.2s

    i.fa
      margin-right: 6px
      transition: all 0.2s

    &:hover
      background: #ffffff
      color: #6772e5

      i.fa
        color: #6772e5

#js-wip-limit-edit
  padding-top: 2%

  p
    margin-bottom: 0

  input
    display: inline-block

  .wip-limit-value
    width: 20%
    margin-right: 5%

  .wip-limit-error
    display: none

  .soft-wip-limit
    margin-right: 8px

  div
    float: left

@media screen and (max-width: 800px)
  .mini-list
    width: 100%
    border-left: 0px
    border-bottom: 1px solid darken(white, 20%)
    background-color: #ffffff
    .list-header
      box-shadow: none
      margin-bottom: 0
      border-top-color: #ffffff

      .list-header-name
        .wip-limit-badge
          background-color: #e9f3fe
          line-height: 22px

  .list
    display: block
    border-left: 0px
    flex: none
    margin: 0
    border-width: 0
    border-radius: 0

    .list-body
      padding: 0 16px 16px

    .list-header-add
      background: #ffffff
      border-bottom: solid 1px #cccccc
      padding: 16px 12px

    &.ui-sortable-helper
      flex: 0 0 60px
      height: 60px
      width: 100%
      border-left: 0px
      border-bottom: 1px solid darken(white, 20%)

      .list-header.ui-sortable-handle
        cursor: grabbing

    &.placeholder
      flex: 0 0 60px
      height: 60px
      width: 100%
      border-left: 0px
      border-bottom: 1px solid darken(white, 20%)

  .list-header
    border-radius: 0
    padding: 10px 16px 14px
    .list-header-name
      display: inline-block
      max-width: calc(100% - 88px)
      margin-right: 0
      line-height: 22px
      &.is-editable
        line-height: 30px
        vertical-align: middle
      .wip-limit-badge
         line-height: 22px
    .list-header-menu
      line-height: 30px
      right: 16px
    .list-header-left-icon
      display: inline
      padding: 4px
      padding-right: 16px
      font-size: 22px
      vertical-align: middle

    .list-header-menu-icon
      position: absolute
      // padding: 7px
      // top: -@padding
      right: 18px
      font-size: 22px
      line-height: 30px

.link-board-wrapper
  display: flex
