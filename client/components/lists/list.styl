@import 'nib'

.list
  box-sizing: border-box
  display: flex
  flex-direction: column
  flex: 0 0 270px
  position: relative
  // Even if this background color is the same as the body we can't leave it
  // transparent, because that won't work during a list drag.
  // background: darken(white, 13%)
  // background: #f6f9fc
  background: #f0f3fc
  margin: 16px 8px
  border-radius: 8px
  // border-left: 1px solid darken(white, 20%)
  border: solid 1px darken( #f0f3fc, 2%) //#ecf3fc
  padding: 0
  float: left
  overflow: hidden
  
  .list-header-menu
    a.fa
      width: 12px
      height: 12px
      padding: 4px
      border-radius: 50%
      background: #e3e6f5
      font-size: 12px
      line-height: 12px
      text-align: center
      border: solid 1px darken(#e3e6f5, 5%)
      transition: all 0.2s
      
      &:hover
        background: #ffffff
        color: #6772e5
        border-color: #6772e5

  &:first-child
    // margin-left: 5px
    border-left: none

  .card-details + &
    border-left: none

  &.ui-sortable-helper
    box-shadow: -2px 2px 8px rgba(0, 0, 0, .3),
                0 0 1px rgba(0, 0, 0, .5)
    transform: rotate(4deg)
    cursor: grabbing

    .list-header.ui-sortable-handle
      cursor: grabbing

  &.placeholder
    background-color: rgba(0, 0, 0, .2)
    border-color: transparent
    box-shadow: none
    height: 100px

  &.list-composer, & .list-composer
    .open-list-composer
      color: #8c8c8c

    .list-name-input
      background: white
      margin: -3px 0 8px

.list-header-card-count
  // height: 35px

.list-header-add
  flex: 0 0 auto
  padding: 20px 12px
  position: relative
  min-height: 20px

.list-header
  flex: 0 0 auto
  padding: 10px 12px 14px
  // margin-bottom: 10px
  position: relative
  min-height: 20px
  // background-color: #e4e4e4;
  // background-color: #ffffff
  border-top: 4px solid #EFF1F7
  // box-shadow: 4px 1px 8px -2px rgba(0,0,0,0.2), 0px 3px 3px -2px rgba(0,0,0,0.14), 0px 3px 4px 0px rgba(0,0,0,0.12)


  &.ui-sortable-handle
    cursor: grab

  .list-header-left-icon
    display: none

  .list-header-name
    display: inline
    font-size: 16px
    line-height: 17px
    margin: 0
    // font-weight: bold
    min-height: 9px
    min-width: 30px
    overflow: hidden
    text-overflow: ellipsis
    word-wrap: break-word
    
    .quiet.small
      display: inline-block

  .list-header-watch-icon
    padding-left: 10px
    color: #a6a6a6


  .list-header-menu
    position: absolute
    padding: 6px 10px
    // margin-top: 1px
    top: 0
    right: 0

  .list-header-plus-icon
    color: #a6a6a6
    margin-right: 10px

  .highlight
    color: #ce1414

.list-body
  flex: 1 1 auto
  flex-direction: column
  display: flex
  overflow-y: auto
  padding: 0px 10px 10px

  .minicards
    flex-grow: 1
    flex-shrink: 0

    form
      margin-bottom: 9px

  .ps-scrollbar-y-rail
    transform: translateX(2px)

  .open-minicard-composer
    border-radius: 8px
    color: #8c8c8c
    display: block
    padding: 8px 10px
    position: relative
    text-decoration: none
    animation: fadeIn 0.3s
    transition: all 0.2s

    i.fa
      margin-right: 6px
      transition: all 0.2s

    &:hover
      background: #ffffff
      color: #6772e5
      
      i.fa
        color: #6772e5

#js-wip-limit-edit
  padding-top: 2%

  p
    margin-bottom: 0

  input
    display: inline-block

  .wip-limit-value
    width: 20%
    margin-right: 5%

  .wip-limit-error
    display: none

  .soft-wip-limit
    margin-right: 8px

  div
    float: left

@media screen and (max-width: 800px)
  .list-header-menu
    margin-right: 30px

  .mini-list
    // flex: 0 0 60px
    // height: 60px
    width: 100%
    border-left: 0px
    border-bottom: 1px solid darken(white, 20%)
    .list-header
      box-shadow: none
      margin-bottom: 0
      border-top-color: #ffffff

  .list
    display: block
    // width: 100%
    border-left: 0px
    flex: none
    padding-bottom: 12px

    &.ui-sortable-helper
      flex: 0 0 60px
      height: 60px
      width: 100%
      border-left: 0px
      border-bottom: 1px solid darken(white, 20%)

      .list-header.ui-sortable-handle
        cursor: grabbing

    &.placeholder
      flex: 0 0 60px
      height: 60px
      width: 100%
      border-left: 0px
      border-bottom: 1px solid darken(white, 20%)

  .list-header

    .list-header-left-icon
      display: inline
      padding: 7px
      padding-right: 16px
      // margin-top: 1px
      top: -@padding
      left: -@padding
      font-size: 22px

    .list-header-menu-icon
      position: absolute
      // padding: 7px
      // top: -@padding
      right: 18px
      font-size: 22px

